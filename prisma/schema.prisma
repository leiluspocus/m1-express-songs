generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Song {
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now())
  title      String
  artist     String
  tags      Tag[]
  
  @@map("songs")
}


model Tag {
  id    Int    @id @default(autoincrement())
  name  String
  songs Song[]
}